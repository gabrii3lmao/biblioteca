<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/catalog.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <h1><%= pageTitle %></h1>
    
    <div class="header-actions">
        <h2>Livros Cadastrados</h2>
        <a href="/livros/novo" class="btn-add">+ Novo Livro</a>
    </div>

    <% if (livros.length > 0) { %>
        <ul class="catalog-grid">
            <% livros.forEach(function(livro) { %>
                <li class="book-card">
                    
                    <div class="book-cover-wrapper">
                        <% if (livro.imagem) { %>
                            <img src="/uploads/<%= livro.imagem %>" alt="Capa de <%= livro.nome %>">
                        <% } else { %>
                            <div class="no-cover">
                                <span>ðŸ“–</span>
                            </div>
                        <% } %>
                    </div>

                    <div class="book-info">
                        <div class="book-header">
                            <strong title="<%= livro.nome %>"><%= livro.nome %></strong>
                            <div class="stars-display" title="Nota: <%= livro.nota %>">
                                <% if(livro.nota) { %>
                                    <% for(let i = 0; i < livro.nota; i++) { %>â˜…<% } %>
                                <% } else { %>
                                    <span class="no-rating">â˜†</span>
                                <% } %>
                            </div>
                        </div>

                        <div class="book-meta">
                            <span class="author"><%= livro.autor %></span>
                            <span class="year-badge"><%= livro.anoLancamento %></span>
                        </div>

                        <div class="book-price">
                            R$ <%= livro.preco ? livro.preco.toFixed(2) : '0.00' %>
                        </div>

                        <p class="book-description">
                            <%= livro.descricao %>
                        </p>

                        <div class="book-actions">
                            <a href="/livros/editar/<%= livro.id %>" class="btn-edit">Editar</a>
                            
                            <form action="/livros/<%= livro.id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn-delete" onclick="return confirm('Tem certeza que deseja excluir?');">
                                    Excluir
                                </button>
                            </form>
                        </div>
                    </div>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <div class="empty-state">
            <p>Nenhum livro encontrado no catÃ¡logo.</p>
        </div>
    <% } %>

    <footer class="site-footer">
        <p>
            ConstruÃ­do por gabrii3lmao.
            <a href="https://github.com/gabrii3lmao/biblioteca" target="_blank">GitHub</a>
        </p>
    </footer>

    <script src="/js/tooltips.js"></script>
</body>
</html>